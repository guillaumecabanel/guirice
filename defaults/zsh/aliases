# File system
alias ls='eza -lh --group-directories-first --icons'
alias lsa='ls -a'
alias lt='eza --tree --level=2 --long --icons --git'
alias lta='lt -a'
alias ff="fzf --preview 'batcat --style=numbers --color=always {}'"
alias fd="fdfind"

# Tools
alias g='git'
alias r='rails'
alias bat='batcat'
alias code='code .'
alias gsweep='git branch --merged | grep -Ev "(^\*|^\+|master|main|dev)" | xargs -r git branch -d && git remote prune origin'
alias temp="sensors | perl -n -e 'print \"\$1\n\" if /: *\+(\d{2}\.\dÂ°C)/'"
alias cop="bundle exec rubocop"
alias n="nvim ."

# Compression
compress() { tar -czf "${1%/}.tar.gz" "${1%/}"; }
alias decompress="tar -xzf"

# Update
alias update_cursor='curl -sSL https://links.kuartz.fr/install_cursor | bash'
alias up='sudo apt update && sudo apt upgrade -y && update_cursor && update_discord && sudo apt autoremove && sudo apt autoclean'

# Guru
alias guru='ruby ~/.local/share/guigui/guru_complete/guru.rb'

# Convert webm files generated by the Gnome screenshot video recorder to mp4s that are more compatible
webm2mp4() {
  input_file="$1"
  output_file="${input_file%.webm}.mp4"
  ffmpeg -i "$input_file" -c:v libx264 -preset slow -crf 22 -c:a aac -b:a 192k "$output_file"
}
