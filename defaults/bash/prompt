force_color_prompt=yes
color_prompt=yes

# Function to get the current Git branch and indicate dirty status
function git_branch {
    if git rev-parse --git-dir > /dev/null 2>&1; then
        branch=$(git symbolic-ref --short HEAD 2>/dev/null)
        if [[ -n $(git status --porcelain) ]]; then
            echo "  \uf418 $branch \uf444"
        else
            echo "  \uf418 $branch"
        fi
    fi
}

# Function to set the terminal window title
function set_window_title {
    local path=$(pwd)
    local branch_status=$(git_branch)
    local title="${path}${branch_status}"
    echo -ne "\033]0;${title}\007"
}

# Set the prompt to only display the custom character
PS1=$'\uf054 '

# Set the window title to include the path and Git branch info
PROMPT_COMMAND='set_window_title'
